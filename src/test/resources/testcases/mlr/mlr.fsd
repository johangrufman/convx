<schema>

    <root name="persons">
        <element name="person" maxOccurs="unbounded">
            <sequence>
                <element ref="personHeader"/>
                <element name="firstName">
                    <sequence>
                        <element ref="firstNamePrefix"/>
                        <element ref="field"/>
                        <element ref="eol"/>
                    </sequence>
                </element>
                <element name="lastName">
                    <sequence>
                        <element ref="lastNamePrefix"/>
                        <element ref="field"/>
                        <element ref="eol"/>
                    </sequence>
                </element>
                <element name="age">
                    <sequence>
                        <element ref="agePrefix"/>
                        <element ref="field"/>
                        <element ref="eol"/>
                    </sequence>
                </element>
            </sequence>
        </element>
    </root>

    <delimitedField name="field" delimiter="\n">
        <exception character="\r"/>
    </delimitedField>
    
    <constant name="firstNamePrefix" value="firstName:"/>
    <constant name="lastNamePrefix" value="lastName:"/>
    <constant name="agePrefix" value="age:"/>
    <constant name="eol" value="\r"/>
</schema>