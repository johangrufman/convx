<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.convx.org/schemas/1.0/fsd ../../../../main/resources/xsd/fsd.xsd"
        xmlns="http://www.convx.org/schemas/1.0/fsd">
    <root name="persons">
        <sequence name="person" maxOccurs="unbounded">
            <field name="firstName" ref="field"/>
            <constant ref="comma"/>
            <field name="lastName" ref="field"/>
            <constant ref="comma"/>
            <field name="age" ref="field"/>
            <field ref="eol"/>
        </sequence>
    </root>

    <field id="field" characterSet="fieldCharacters"/>
    <field id="eol" characterSet="eolCharacters" defaultOutput="\n"/>
    <constant id="comma" value=","/>

    <characterSet id="eolCharacters">
        <include controlChar="LINE_FEED"/>
        <include controlChar="CARRIAGE_RETURN"/>
    </characterSet>

    <characterSet id="fieldCharacters">
        <include characterClass="ALL"/>
        <exclude set="eolCharacters"/>
        <exclude char=","/>
    </characterSet>

</schema>