<schema>

    <root name="persons">
        <element name="person" maxOccurs="unbounded">
            <sequence>
                <element name="firstName" ref="field"/>
                <element ref="comma"/>
                <element name="lastName" ref="field"/>
                <element ref="comma"/>
                <element name="age" ref="field"/>
                <element ref="eol"/>
            </sequence>
        </element>
    </root>

    <delimitedField name="field" delimiter=",">
        <exception character="\n"/>
        <exception character="\r"/>
    </delimitedField>
    
    <constant name="comma" value=","/>
    <constant name="eol" value="\r"/>
</schema>