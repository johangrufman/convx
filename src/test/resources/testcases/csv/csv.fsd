<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.convx.org/schemas/1.0/fsd ../../../../main/resources/xsd/fsd.xsd"
        xmlns="http://www.convx.org/schemas/1.0/fsd">
    <root name="persons">
        <sequence name="person" maxOccurs="unbounded">
            <delimitedField name="firstName" ref="field"/>
            <constant ref="comma"/>
            <delimitedField name="lastName" ref="field"/>
            <constant ref="comma"/>
            <delimitedField name="age" ref="field"/>
            <constant ref="eol"/>
        </sequence>
    </root>

    <delimitedField id="field" exceptions="\n\r,"/>
    <constant id="comma" value=","/>
    <constant id="eol" value="\n"/>
</schema>