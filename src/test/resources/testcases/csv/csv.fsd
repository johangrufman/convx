<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.convx.org/schemas/1.0/fsd ../../../../main/resources/xsd/fsd.xsd"
        xmlns="http://www.convx.org/schemas/1.0/fsd">
    <root name="persons">
        <sequence name="person" maxOccurs="unbounded">
            <field name="firstName" ref="field"/>
            <constant ref="comma"/>
            <field name="lastName" ref="field"/>
            <constant ref="comma"/>
            <field name="age" ref="field"/>
            <constant ref="eol"/>
        </sequence>
    </root>

    <field id="field" characterSet="fieldChars"/>
    <constant id="comma" value=","/>
    <constant id="eol" value="\n"/>

    <characterSet id="eolChars">
        <include controlChar="LINE_FEED"/>
        <include controlChar="CARRIAGE_RETURN"/>
    </characterSet>

    <characterSet id="fieldChars">
        <include predefined="ALL"/>
        <exclude set="eolChars"/>
        <exclude char=","/>
    </characterSet>
</schema>