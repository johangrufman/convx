<schema>

    <root name="persons">
        <element name="person" maxOccurs="unbounded">
            <sequence>
                <element name="firstName">
                    <fixedLengthField length="15"/>
                </element>
                <element name="lastName">
                    <fixedLengthField length="15"/>
                </element>
                <element name="age">
                    <fixedLengthField length="2"/>
                </element>
                <element ref="eol"/>
            </sequence>
        </element>
    </root>

    <constant name="eol" value="\r"/>
</schema>