<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.convx.org/schemas/1.0/fsd ../../../../main/resources/xsd/fsd.xsd"
        xmlns="http://www.convx.org/schemas/1.0/fsd">

    <root name="persons">
        <sequence name="person" maxOccurs="unbounded">
            <field name="firstName" length="15" characterSet="fieldChars"/>
            <field name="lastName" length="15" characterSet="fieldChars"/>
            <field name="age" length="2" characterSet="fieldChars"/>
            <constant value="\n"/>
        </sequence>
    </root>

    <characterSet id="fieldChars">
        <include predefined="ALL"/>
    </characterSet>
</schema>